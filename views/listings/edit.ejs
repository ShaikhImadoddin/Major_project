<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit Listing Here </h3>
    <form 
        class="needs-validation" 
        method="POST" 
        action="/listings/<%= listing._id %>?_method=PUT"
        enctype="multipart/form-data"
        novalidate >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="invalid-feedback">Title Required</div>
        </div>
        
        <div class="mb-3">
             <label for="description" class="form-label">Description</label>
             <textarea id="description" type="text" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
             <div class="invalid-feedback">Description Required</div>
        </div>

        <div class="mb-3 d-none">
            <label for="imagefilename" class="form-label">Imagefilename</label>
            <input id="imagefilename" type="text" name="listing[image][filename]" value="<%= listing.image.filename %>" class="form-control">
        </div>

        <div class="mb-3">
    <img src="<%= originalImageUrl %>" style="width: 300px; height: 200px; object-fit: cover;">
</div>


        <div class="mb-3">
            <label for="imageurl" class="form-label">Upload New Image</label>
            <input id="imageurl" type="file" name="listing[image][url]" value="<%= listing.image.url %>" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input id="price" type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                <div class="invalid-feedback">Price Required</div>
            </div>
        
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input id="country" type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                <div class="invalid-feedback">Country Required</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="invalid-feedback">Location Required</div>
        </div>
        
        <button type="submit" class="btn btn-danger mt-3" >Edit</button>
    </form>
    </div>
</div>